cabal-version:  >= 1.2
build-type:     Custom

library
  build-tools:    cpphs,llvm-config
  build-depends: base,tagged>=0.4,unix
  includes:             
    wrapper/extra.h
    wrapper/HaskellPass.h
  include-dirs:         wrapper .
  extra-libraries:      stdc++
